  <!-- PREVIEW MODAL -->
  <div class="modal-backdrop" id="previewModal" aria-hidden="true">
    <div class="modal" role="dialog" aria-modal="true" aria-label="Gallery preview">
      <div class="modal-head">
        <h3 id="modalTitle">Preview</h3>
        <div class="close" id="closeModal" aria-label="Close">×</div>
      </div>
      <div class="modal-body" id="modalBody">Preview</div>
    </div>
  </div>

  <!-- NAV LOADER -->
  <script src="nav.js"></script>

  <script>
    // =========================
    // GALLERY DATA (from your original)
    // =========================
    const galleryItems = [
      { key: "Signature Tote",      title: "Signature Leather Tote",       series: "Handcrafted Series", tag: "Icon Piece" },
      { key: "Quilted Shoulder",    title: "Quilted Shoulder Bag",         series: "Classic Collection", tag: "Heritage" },
      { key: "Mini Structured",     title: "Structured Mini Bag",          series: "V-Series",           tag: "Compact" },
      { key: "Monogram Crossbody",  title: "Monogram Crossbody",           series: "Everyday Luxury",    tag: "Daily" },
      { key: "Gold Chain",          title: "Gold Chain Shoulder",          series: "Evening Edit",       tag: "Occasion" },
      { key: "Heritage Satchel",    title: "Heritage Satchel",             series: "Timeless Design",    tag: "Classic" },
      { key: "Bucket Bag",          title: "Leather Bucket Bag",           series: "Modern Classic",     tag: "Trend" },
      { key: "Top Handle",          title: "Elegant Top Handle",           series: "Executive Line",     tag: "Formal" }
    ];

    let filtered = [...galleryItems];

    const grid = document.getElementById("galleryGrid");
    const countText = document.getElementById("countText");
    const searchInput = document.getElementById("searchInput");
    const clearBtn = document.getElementById("clearBtn");

    const previewModal = document.getElementById("previewModal");
    const modalTitle = document.getElementById("modalTitle");
    const modalBody = document.getElementById("modalBody");
    const closeModal = document.getElementById("closeModal");

    function escapeHtml(str){
      return String(str)
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    function render(){
      countText.textContent = `Showing ${filtered.length} items`;

      grid.innerHTML = filtered.map((g) => `
        <article class="card" onclick="openPreview('${escapeHtml(g.title)}','${escapeHtml(g.key)}','${escapeHtml(g.series)}','${escapeHtml(g.tag)}')">
          <div class="img">[${escapeHtml(g.key)}]</div>
          <div class="info">
            <div class="title">${escapeHtml(g.title)}</div>
            <div class="meta">${escapeHtml(g.series)}</div>
            <div class="row">
              <div class="tag">${escapeHtml(g.tag)}</div>
              <a class="link" href="shop.html" onclick="event.stopPropagation();">Shop</a>
            </div>
          </div>
        </article>
      `).join("");
    }

    function applySearch(){
      const q = searchInput.value.trim().toLowerCase();
      filtered = galleryItems.filter(g => {
        const blob = `${g.key} ${g.title} ${g.series} ${g.tag}`.toLowerCase();
        return blob.includes(q);
      });
      render();
    }

    function openPreview(title, key, series, tag){
      modalTitle.textContent = title;
      modalBody.innerHTML = `
        <div style="max-width:820px">
          <div style="font-size:1.05rem; margin-bottom:10px; color:#d6d6d6;">
            <span style="color:var(--gold); font-weight:700;">Concept:</span> [${escapeHtml(key)}]
          </div>
          <div style="margin-bottom:10px; color:#cfcfcf;">
            <span style="color:var(--gold); font-weight:700;">Series:</span> ${escapeHtml(series)}
          </div>
          <div style="margin-bottom:18px; color:#cfcfcf;">
            <span style="color:var(--gold); font-weight:700;">Tag:</span> ${escapeHtml(tag)}
          </div>

          <div style="display:flex; gap:10px; justify-content:center; flex-wrap:wrap;">
            <a class="link" href="shop.html" style="padding:10px 12px;" onclick="closePreview()">Go to Shop</a>
            <a class="link" href="luxury-handbags.html" style="padding:10px 12px;" onclick="closePreview()">Luxury Handbags</a>
          </div>
        </div>
      `;
      previewModal.classList.add("active");
      document.body.style.overflow = "hidden";
    }

    function closePreview(){
      previewModal.classList.remove("active");
      document.body.style.overflow = "auto";
    }

    // expose for inline onclick
    window.openPreview = openPreview;
    window.closePreview = closePreview;

    closeModal.addEventListener("click", closePreview);
    previewModal.addEventListener("click", (e) => {
      if(e.target === previewModal) closePreview();
    });

    searchInput.addEventListener("input", applySearch);
    clearBtn.addEventListener("click", () => {
      searchInput.value = "";
      filtered = [...galleryItems];
      render();
    });

    // initial
    render();
  </script>
</body>
</html>
