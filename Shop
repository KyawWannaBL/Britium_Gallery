    <div class="chat-box" id="chatInterface">
        <div class="chat-header">
            <h4>Britium Concierge</h4>
            <span class="close-chat" id="closeChat">√ó</span>
        </div>
        <div class="chat-content" id="chatHistory">
            <div class="msg bot">
                Hello. Need help filtering products or finding a specific item?
            </div>
        </div>
        <div class="chat-input-area">
            <input type="text" id="userMsg" class="chat-input" placeholder="Type here...">
            <button id="sendMsg" class="send-btn">Send</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- FILTERING LOGIC ---
            const cards = document.querySelectorAll('.product-card');
            const categoryChecks = document.querySelectorAll('.filter-check');
            const priceChecks = document.querySelectorAll('.price-check');
            const colorChecks = document.querySelectorAll('.color-check');

            function filterProducts() {
                // Get checked values
                const selectedCats = Array.from(categoryChecks).filter(c => c.checked).map(c => c.dataset.filter);
                const selectedColors = Array.from(colorChecks).filter(c => c.checked).map(c => c.dataset.color);
                
                cards.forEach(card => {
                    const cat = card.dataset.category;
                    const price = parseFloat(card.dataset.price);
                    const color = card.dataset.color;
                    
                    let catMatch = selectedCats.length === 0 || selectedCats.includes(cat);
                    let colorMatch = selectedColors.length === 0 || selectedColors.includes(color);
                    
                    // Price match logic (if any range is checked, card must match at least one)
                    let priceMatch = true;
                    const activePriceFilters = Array.from(priceChecks).filter(c => c.checked);
                    if (activePriceFilters.length > 0) {
                        priceMatch = activePriceFilters.some(chk => {
                            const min = parseFloat(chk.dataset.min);
                            const max = parseFloat(chk.dataset.max);
                            return price >= min && price <= max;
                        });
                    }

                    // Show/Hide
                    if (catMatch && colorMatch && priceMatch) {
                        card.style.display = 'flex'; // Restore flex display
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            // Attach Listeners
            categoryChecks.forEach(cb => cb.addEventListener('change', filterProducts));
            priceChecks.forEach(cb => cb.addEventListener('change', filterProducts));
            colorChecks.forEach(cb => cb.addEventListener('change', filterProducts));


            // --- CHATBOT LOGIC ---
            const toggleChat = document.getElementById('toggleChat');
            const closeChat = document.getElementById('closeChat');
            const chatInterface = document.getElementById('chatInterface');
            const sendBtn = document.getElementById('sendMsg');
            const userMsg = document.getElementById('userMsg');
            const chatHistory = document.getElementById('chatHistory');

            toggleChat.addEventListener('click', () => {
                chatInterface.classList.add('open');
                userMsg.focus();
            });
            closeChat.addEventListener('click', () => chatInterface.classList.remove('open'));

            function handleSend() {
                const text = userMsg.value.trim();
                if(!text) return;

                const divUser = document.createElement('div');
                divUser.className = 'msg user';
                divUser.innerHTML = text;
                chatHistory.appendChild(divUser);
                userMsg.value = '';

                setTimeout(() => {
                    let response = "I can help you browse our collection.";
                    const lower = text.toLowerCase();
                    if(lower.includes('filter') || lower.includes('find')) response = "You can use the sidebar on the left to filter by Category, Price, or Color.";
                    else if(lower.includes('bag')) response = "We have excellent Handbags and Totes. Try selecting 'Handbags' in the filter.";
                    else if(lower.includes('return')) response = "Returns are easy. Visit <a href='return_request.html' style='color:#fff;'>Return Request</a>.";
                    
                    const divBot = document.createElement('div');
                    divBot.className = 'msg bot';
                    divBot.innerHTML = response;
                    chatHistory.appendChild(divBot);
                    chatHistory.scrollTop = chatHistory.scrollHeight;
                }, 500);
            }

            sendBtn.addEventListener('click', handleSend);
            userMsg.addEventListener('keypress', (e) => { if(e.key==='Enter') handleSend(); });
        });
    </script>

